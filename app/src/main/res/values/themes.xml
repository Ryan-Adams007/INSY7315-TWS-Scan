<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.TWSScan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- App brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>

        <!-- Prevent content from drawing under system bars -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLightStatusBar">false</item> <!-- ensures white icons on red bar -->
    </style>

    <!-- App Theme -->
    <style name="Theme.TWSScan" parent="Base.Theme.TWSScan" />

    <!-- ===================================================== -->
    <!-- CUSTOM COMPONENT STYLES =========================== -->
    <!-- ===================================================== -->

    <!-- Small tonal-style button (for + / - quantity controls) -->
    <style name="Tws.SmallTonalButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <!-- Look & feel -->
        <item name="backgroundTint">@color/colorSurface</item>
        <item name="strokeColor">@color/dividerColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="elevation">3dp</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <!-- Primary action button (e.g., “Add to Pick”) -->
    <style name="Tws.PrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">4dp</item>
    </style>

</resources>