<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="za.tws.scan">

    <!-- Needed for all network calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TWSScan"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- âœ… NEW: Launcher entry point (decides Login vs Main) -->
        <activity
            android:name=".LauncherActivity"
            android:exported="true"
            android:theme="@style/Theme.TWSScan"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main app screen (after login) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Login screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Other functional activities -->
        <activity
            android:name=".PickingActivity"
            android:exported="false" />
        <activity
            android:name=".PackingActivity"
            android:exported="false" />
        <activity
            android:name=".DeliveryActivity"
            android:exported="false" />
        <activity
            android:name=".StockTakingActivity"
            android:exported="false" />
    </application>

</manifest>